{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}
{% block stylesheets %}

<style>



/* Style pour le conteneur principal */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
}

  .form-control{
  /* Ajoutez vos styles personnalisés ici */
  color: red;
  border: 10px solid black;
  /* Autres styles */
}
.form-control{
  /* Ajoutez vos styles personnalisés ici */
  color: red;
  border: 10px solid black;
  /* Autres styles */
}

.my-custom-button {
  padding: 10px 20px;
  font-size: 16px;
  background-color: red;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  display: block;
  margin: 0 auto;
  text-align: center;
}

.my-custom-button:hover {
  background-color: black;
}
.text { 
  color:red;
  
}

</style>
{% endblock %}

{% block body %}
    

    <div class="container">
        <h1 style="font-style: 'italic'; font-size: 30px; font-weight: bold; color: #000000; text-align: center; text-transform: uppercase; letter-spacing: 2px;">Create new User</h1>
{{ form_start(form) }}
<div class="form-group">
    {{ form_label(form.email) }}
    <div class="d-flex align-items-start">
        <div class="flex-grow-1">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {% if form.email.vars.errors|length > 0 %}
                <div class="text">
                    {{ form_errors(form.email) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.password) }}
    <div class="d-flex align-items-start">
        <div class="flex-grow-1">
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
<button class="my-custom-button">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}




   
{% endblock %}


